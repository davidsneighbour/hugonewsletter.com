{
  "name": "hugonewsletter.com",
  "version": "2.0.1",
  "description": "Repository for the (unofficial) Hugo Newsletter.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidsneighbour/hugonewsletter.com.git"
  },
  "author": "Patrick Kollitsch <patrick@hugonewsletter.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidsneighbour/hugonewsletter.com/issues"
  },
  "homepage": "https://github.com/davidsneighbour/hugonewsletter.com",
  "browserslist": [
    "> 1%",
    "last 2 version"
  ],
  "standard-version": {
    "skip": {
      "changelog": true
    },
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        100
      ],
      "type-enum": [
        0,
        "always",
        [
          "feat",
          "fix",
          "layouts",
          "refactor",
          "test",
          "chore",
          "wip",
          "content"
        ]
      ]
    }
  },
  "scripts": {
    "release": "standard-version --release-as patch -a -t \"\" && git push --follow-tags origin master",
    "release-next": "standard-version --release-as minor -a -t \"\" && git push --follow-tags origin master",
    "release-major": "standard-version --release-as major -a -t \"\" && git push --follow-tags origin master",
    "serve": "hugo server --minify --disableFastRender --i18n-warnings --navigateToChanged  --templateMetrics --templateMetricsHints --verbose --verboseLog --path-warnings --buildDrafts --buildExpired --buildFuture --watch --enableGitInfo --forceSyncStatic --log true --logFile hugo.log --verbose",
    "commitlint": "commitlint --from=HEAD~1"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "autoprefixer": "10.0.4",
    "cssnano": "4.1.10",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "6.3.0",
    "husky": "4.3.0",
    "postcss-cli": "8.3.0",
    "standard-version": "9.0.0"
  }
}
